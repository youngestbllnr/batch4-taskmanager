<% content_for :title, "Chang Password / Quest" %>
<div class="password">
	<p class="icon">
		<a href="/" class="primary no-underline">ðŸŽ¯ Quest</a>
	</p>
	<p class="prompt">Change Password</p>
  <div class="form">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field">
        <%= f.label :password, "New Password" %><br />
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", onfocus: "this.parentNode.classList.add('focus')", onfocusout: "this.parentNode.classList.remove('focus')" %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation, "Confirm New Password" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", onfocus: "this.parentNode.classList.add('focus')", onfocusout: "this.parentNode.classList.remove('focus')" %>
      </div>

      <div class="actions">
        <%= f.submit "Change Password" %>
      </div>
    <% end %>
  </div>
  <%= link_to "Cancel", root_path, class: "escape" %>
</div>
