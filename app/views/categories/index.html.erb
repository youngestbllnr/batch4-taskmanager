<% content_for :title, "Categories / Quest" %>
<div class="dev">
<h4>Categories</h4>
  <div class="counts">
    <p>Today: <%= @categories.where(created_at: Time.current.beginning_of_day..Time.current.end_of_day).count %></p>
    <p>This Week: <%= @categories.where(created_at: Time.current.beginning_of_week..Time.current.end_of_week).count %></p>
    <p>This Month: <%= @categories.where(created_at: Time.current.beginning_of_month..Time.current.end_of_month).count %></p>
    <p>All Time: <%= @categories.count %></p>
  </div>
  <div class="details">
    <table>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>User</th>
        <th colspan="3"></th>
      </tr>
      <% @categories.last(1000).reverse.each do |category| %>
      <tr id="category_<%= category.id %>">
        <th><%= category.id %></th>
        <td><%= category.title %></td>
        <td><%= category.description %></td>
        <td><%= category.user.email %></td>
        <td><%= link_to 'View', category_path(category), target: :_blank %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Delete', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
