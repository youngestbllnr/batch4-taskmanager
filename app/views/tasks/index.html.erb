<% content_for :title, "Tasks / Quest" %>
<div class="dev">
<h4>Tasks</h4>
  <div class="counts">
    <p>Today: <%= @today.count %></p>
    <p>This Week: <%= @this_week.count %></p>
    <p>This Month: <%= @this_month.count %></p>
    <p>All Time: <%= @categories.count %></p>
  </div>
  <div class="details">
    <table>
      <tr>
        <th>ID</th>
        <th>Title</th>
        <th>Description</th>
        <th>Category</th>
        <th>Due Date</th>
        <th>Is Checked</th>
        <th>Created At</th>
      </tr>
      <% @tasks.last(1000).reverse.each do |task| %>
      <tr id="task_<%= task.id %>">
        <th><%= task.id %></th>
        <td><%= task.title %></td>
        <td><%= task.description %></td>
        <td><%= task.category.title %></td>
        <td><%= task.due_date %></td>
        <td><%= task.is_checked %></td>
        <td><%= task.created_at %></td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

